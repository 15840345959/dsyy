.card-bg{
  height:100%;
}
.card-img{
  width:100%;
  height:320rpx;
}
.card-word{
  /* font-family: PingFang-SC-Regular; */
  font-size: 28rpx;
  color: #323232;
  letter-spacing: -0.68rpx;
  line-height: 80rpx;
}
.card-button{
  width:260rpx;
  height:60rpx;
  background: #EFEFEF;
  border-radius: 8rpx;
  /* font-family: PingFang-SC-Medium; */
  font-size: 28rpx;
  color: #464646;
  letter-spacing: -0.68rpx;
  line-height: 60rpx;
  float:left;
  padding-left:0;
  padding-right:0;
}
.card-button-hover{
  width:237rpx;
  height:60rpx;
  border-radius: 8rpx;
  /* font-family: PingFang-SC-Medium; */
  font-size: 28rpx;
  letter-spacing: -0.68rpx;
  line-height: 60rpx;
  float:left;
  background: #36BE7A;
  color: #ffffff;
  padding-left:0;
  padding-right:0;
}
.card-text{
  background: #ECF8F1;
  /* font-family: PingFangSC-Regular; */
  font-size: 24rpx;
  color: #969696;
  letter-spacing: -0.27rpx;
}
.card-confirm{
  background: #36BE7A;
  width: 100%;
  height: 90rpx;
  position: absolute;
  bottom: 0;
  /*font-family: PingFang-SC-Medium;*/
  font-size: 32rpx;
  color: #fff;
  letter-spacing: -0.41rpx;
  line-height: 90rpx;
  text-align: center;
}