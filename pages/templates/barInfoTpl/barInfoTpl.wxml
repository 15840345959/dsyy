<!--该模板用于首页展示-->
<template name="barInfoIndex">
  <view class="bar border-bottom margin-left-10 margin-right-10 padding-top-10 padding-bottom-10" style="position:relative;" bindtap="bardetail" data-barid="{{id}}">
    <view class="grey-font font-size-12" style="position:absolute;right:10px;top:15px;">
      0.5km
    </view>
    <view class="bar-img">
      <image src="{{picture}}" class="bar-img-nor" mode="aspectFill"></image>
    </view>
    <view class="bar-info">
      <view class="text-oneline margin-top-5">{{name}}</view>
      <view class="text-oneline margin-top-5 grey-font">{{address}}</view>
      <view class="text-oneline margin-top-5 grey-font" style="display:flex;align-items:center;" bindtap="callPhonenum" data-phonenum="{{phonenum}}">
        <image src="../../images/tel_icon.png" class="opt-icon-sma"></image>
        <text class="margin-left-5">{{phonenum}}</text>
      </view>
    </view>
  </view>
</template>