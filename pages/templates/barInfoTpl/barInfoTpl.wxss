/* pages/templates/BookInfoTpl/bookInfoTpl.wxss */

.bar {
  display: flex;
  flex-direction: row;
  padding: 10rpx 0rpx;
  border-bottom: 1px rgba(255, 255, 255, 0.2) solid;
}

.bar-img {
  float: left;
}

.bar-img-nor {
  width: 240rpx;
  height: 300rpx;
  border-radius: 5%;
}

.bar-info {
  padding-left: 40rpx;
  float: left;
  width: 460rpx;
  font-size: 14px;
}

.bar-title-font{
  /*font-family: .PingFang-SC-Regular;*/
  font-size: 32rpx;
  color: #646464;
  letter-spacing: -0.77rpx;
}

.bar-font{
  font-family: PingFangSC-Light;
  font-size: 26rpx;
  color: #646464;
  letter-spacing: -0.63rpx;
}
